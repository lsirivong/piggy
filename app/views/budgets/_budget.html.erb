<h2><%= formatted_date budget.start_date %> &ndash; <%= formatted_date budget.end_date %> (<%= formatted_money budget.amount %>)</h2>

<div class="envelopes">
  <h2>Envelopes</h2>
  <% budget.envelopes.each do |e| %>
    <div class="envelope" id="<%= dom_id e %>">
      <%= render e %>
    </div>
  <% end %>
</div>

