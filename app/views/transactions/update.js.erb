$('<%= "##{dom_id(@transaction)}_form_time" %>').val('<%= DateTime.now %>');

<% if @transaction.errors.none? %>
  $('#<%= dom_id @transaction %>').replaceWith('<%= escape_javascript(render(@transaction)) %>');
  <%= recalculate_stats(@transaction) %>
<% else %>
  <%= list_errors(@transaction) %>
<% end %>
