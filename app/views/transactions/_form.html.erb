<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h3>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :vendor %><br />
    <%= f.text_field :vendor %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :envelope_id %><br />
    <!-- Should filter out inactive here... -->
    <%= f.collection_select(:envelope_id, Envelope.all, :id, :name, :include_blank => true ) %>
  </div>
  <div class="field">
    <%= f.label :goal_id %><br />
    <!-- Should filter out inactive here... -->
    <%= f.collection_select(:goal_id, Goal.all, :id, :name, :include_blank => true ) %>
  </div>
  <div class="desc">
    <%= f.label :desc %><br />
    <%= f.text_area :desc, :rows => 4 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
